<div class="galley-link-button-wrapper">
  <div class="galley-link-button page-width">
    <a target="_blank" href="{{section.settings.instagram_link}}">
      <span>
        INSTAGRAM
      </span>
    {%- render 'icon-instagram-w' -%}
    </a>
  </div>
</div>


<style>
  .galley-link-button-wrapper {
    background: rgba(89, 87, 87, 0.05);
    padding-top: 6rem;
    padding-bottom: 12rem;
  }

  @media screen and (max-width: 800px) {
    .galley-link-button-wrapper {
      padding-top: 3rem;
      padding-bottom: 6rem;
    }
  }

  .galley-link-button {
    text-align: center;
  }
  .galley-link-button a {
    display: inline-flex;
    width: 34rem;
    height: 5.8rem;
    text-decoration: none;
    font-size: 1.6rem;
    font-family: Poppins;
    cursor: pointer;
    align-items: center;
    justify-content: center;
    color: #fff;
    background-color: #595757;
    font-family: Poppins;
  }

  .galley-link-button span{
    margin-right: 8px;
  }

  @media screen and (max-width: 500px) {
    .galley-link-button a {
      width: 30rem;
      height: 5.6rem;
      font-size: 1.6rem;
    }
  }
  .galley-link-button a:hover {
    cursor: pointer;
    opacity: 0.7;
    transition: 0.3s;
  }
</style>

{% schema %}
  {
    "name": "Gallery button",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "url",
        "id": "instagram_link",
        "label": "Instagram link"
      }
    ],
    "presets": [
      {
        "name": "Gallery button"
      }
    ]
  }
{% endschema %}