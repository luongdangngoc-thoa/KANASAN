<div class="category-link-wrapper page-width">
  <div class="collection-link-list">
    {% for type in shop.types %}
      <span class="collection-link">
        {{- type | link_to_type }}
      </span>
    {% endfor %}
  </div>
</div>

<style>

  div.category-link-wrapper {
    margin-top: 6rem;
    overflow-x: auto;
    overflow-y: hidden;
    position: relative;
    white-space: nowrap;
    text-align: center;
  }
  @media screen and (max-width: 859px) {
    div.category-link-wrapper {
      margin-top: unset;
    }

  }

  .collection-link a {
    display: inline-block;
    color: #595757;
    font-family: Noto Sans JP;
    font-size: 1.6rem;
    font-style: normal;
    font-weight: 300;
    line-height: normal;
    letter-spacing: 1.6px;
    padding: 1.6rem 2rem;
    text-decoration: none;
    min-width: 15rem;
    text-align: center;
  }

   @media screen and (max-width: 60px) {
    .collection-link a {
      padding: 1.4 2rem;
    }
  }

  .collection-link a:hover {
    font-weight: 500;
    cursor: pointer;
    opacity: 0.7;
    background-color: rgb(231, 224, 224);
  }

 /* custom scrollbar */
  /* width */
  .category-link-wrapper::-webkit-scrollbar {
    height: 4px;
  }

  /* Track */
  .category-link-wrapper::-webkit-scrollbar-track {
    background: #f1f1f1;
    height: 2px;
  }

  /* Handle */
  .category-link-wrapper::-webkit-scrollbar-thumb {
    background: #595757;
    height: 2px;
  }

  /* Handle on hover */
  .category-link-wrapper::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
</style>