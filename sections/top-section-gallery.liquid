<div class=" section-{{ section.id }} gradient color-{{ section.settings.section_color_scheme }} scroll-trigger animate--slide-in">
  <div class="gallery-wrapper page-width">
    <h2 class="gallery-title">
      {{ section.settings.title }}</h2>
    <div class='sk-ww-instagram-hashtag-feed gallery-list' data-embed-id='204461'></div>
    <script
      src='https://widgets.sociablekit.com/instagram-hashtag-feed/widget.js'
      async
      defer></script>


    <div class="galley-link-button">
      <a href="{{section.settings.button_link}}">
        <span>
          INSTAGRAM
        </span>
        <img src="{{ "instagram.svg" | asset_url }}">
      </a>
    </div>
  </div>
</div>

<style>
  .gallery-wrapper {
    padding-top: 12rem;
    padding-bottom: 12rem;
  }
  .gallery-title {
    color: #595757;
    font-family: Noto Sans JP;
    font-size: 2rem;
    font-style: normal;
    font-weight: 400;
    padding-bottom: 2.6rem;
    border-bottom: rgb(208 208 208) solid 1px;
  }
  .gallery-list {
    margin-top: 6rem;
    display: grid;
    grid-template-columns: auto auto auto;
    gap: 6rem;
  }

  .galley-link-button {
    margin-top: 10rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
  }

  .galley-link-button a {
    display: inline-block;
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    text-align: center;
    color: #fff;
    background-color: #595757;
    font-size: 1.6rem;
    font-family: Poppins;
    min-width: 34rem;
    padding-top: 1.2rem;
    padding-bottom: 1.2rem;

  }

  .galley-link-button a img {
    margin-left: 8px;
  }

  @media screen and (max-width: 650px) {
    .galley-link-button a {
      width: 80%;
    }
  }


  @media screen and (max-width: 400px) {
    .galley-link-button a {
      width: 100%;
    }
  }

  .galley-link-button a:hover {
    cursor: pointer;
    opacity: 0.7;
    transition: 0.3s;
  }
</style>

{% schema %}
  {
    "name": "Search by Material",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "background-1"
      }, {
        "type": "text",
        "id": "title",
        "label": "Section title",
        "default": "GALLERY"
      }, {
        "type": "url",
        "id": "instagram_link",
        "label": "Instagram link"
      }
    ],
    "presets": [
      {
        "name": "GALLERY"
      }
    ]
  }
{% endschema %}