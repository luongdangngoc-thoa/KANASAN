<div class=" section-{{ section.id }} gradient color-{{ section.settings.section_color_scheme }} scroll-trigger animate--slide-in">
  <div class="material-search-wrapper page-width">
    <h2 class="material-search-title">
      {{ section.settings.title }}</h2>
    <div class="material-search-list">
      {%- for block in section.blocks -%}
        <a class="material-link" href="{{block.settings.url}}">
          <img
            class="material-img"
            src="{{block.settings.image | img_url: 'large'}}"
            alt="{{ block.settings.material-name }}">
          <div class="material-img-overlay">
            <p class="material-name">
              {{ block.settings.material-name }}</p>
            <p class="material-name material-name-EN">
              {{ block.settings.material-name-en }}</p>

          </div>
        </a>
      {%- endfor -%}
    </div>
    <div class="material-search-button">
      <a class="page-button btn-primary" href="{{section.settings.button_link}}">
        {{ section.settings.button_lable }}</a>
    </div>
  </div>
</div>

<style>
  .material-search-wrapper {
    padding-top: 12rem;
    padding-bottom: 12rem;
  }

  @media screen and (max-width: 800px) {
    .material-search-wrapper {
      padding-top: 6rem;
      padding-bottom: 6rem;
    }
  }
  .material-search-title {
    color: #595757;
    font-family: Noto Sans JP;
    font-size: 2rem;
    font-style: normal;
    font-weight: 400;
    padding-bottom: 2.6rem;
    border-bottom: rgb(208 208 208) solid 1px;
    margin-bottom: 6rem;
  }
  .material-search-list {
    display: grid;
    grid-template-columns: auto auto auto auto;
    justify-content: center;
    gap: 4rem;
  }

  @media screen and (max-width: 900px) {
    .material-search-list {
      gap: 2rem;
    }
  }
  .material-search-list .material-link {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    position: relative;
    max-width: 200px;
    box-shadow: rgba(100, 100, 111, 0.2) 0 7px 29px 0;
  }
  .material-img {
    border-radius: 50%;
    height: 100%;
    width: 100%;
    max-width: 200px;
  }

  @media screen and (max-width: 650px) {
    .material-search-list {
      display: grid;
      grid-template-columns: auto auto;
      gap: 2rem;
    }
    .material-search-list .material-link {
      max-width: 160px;
    }
    .material-img {
      max-width: 160px;
    }
  }
  .material-img-overlay {
    position: absolute;
    inset: 0;
    z-index: 2;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background: rgba(0, 0, 0, 0.2);
  }
  .material-img-overlay:hover {
    background: none;
    transition: 0.7s ease;
  }
  .material-img-overlay .material-name {
    text-decoration: none;
    color: #FFF;
    font-family: Noto Sans JP;
    font-size: 2rem;
    margin: 0;
    font-weight: 500;
    line-height: 1.8;
    text-align: center;
  }

  .material-img-overlay .material-name-EN {
    font-family: Poppins;
    font-size: 1.2rem;
    font-weight: 300;
    line-height: 1.5;
    letter-spacing: 1px;
    text-align: center;
  }

  .material-search-button {
    margin-top: 10rem;
    text-align: center;
  }
  @media screen and (max-width: 800px) {
    .material-search-button {
      margin-top: 6rem;
    }
  }
</style>
{% schema %}
  {
    "name": "Search by Material",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "background-1"
      }, {
        "type": "text",
        "id": "title",
        "label": "Section title",
        "default": "カテゴリーから探す"
      }, {
        "type": "text",
        "id": "button_lable",
        "label": "Button lable",
        "default": "口コミランキングはこちら"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "blocks": [
      {
        "type": "Block",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "material-name",
            "default": "Material name",
            "label": "Material name"
          }, {
            "type": "text",
            "id": "material-name-en",
            "default": "Material name-English",
            "label": "Material name-English"
          }, {
            "type": "url",
            "id": "url",
            "label": "URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Search by material",
        "blocks": [
          {
            "type": "Block"
          }, {
            "type": "Block"
          }, {
            "type": "Block"
          }
        ]
      }
    ]
  }
{% endschema %}