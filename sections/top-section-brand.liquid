<div class="section-{{ section.id }} top-brand-list color-{{ section.settings.section_color_scheme }} scroll-trigger animate--slide-in">
  <div class="brand-list-container page-width">
    {%- for block in section.blocks -%}
      <div class="brand">
        <div class="brand-img scroll-trigger animate--slide-in">
          <img src="{{ block.settings.brand-image | img_url: 'large'}}" alt="{{ block.settings.brand-name }}">
        </div>
        <div class="brand-info-wrapper scroll-trigger animate--slide-in">
          <h2 class="brand-title">{{ block.settings.brand-name }}</h2>
          <p class="brand-des {%- if block.settings.brand-des contains "COMING SOON" %} text-center {% endif %}">{{ block.settings.brand-des }}</p>
        </div>
        <div class="brand-button scroll-trigger animate--slide-in">
          <a
            class="page-button btn-transparent"
            role="link"
            href="{{block.settings.brand-url}}">
            {{ block.settings.button-lable }}
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>

   .text-center {
    text-align: center;
   }
  .top-brand-list {
    padding-top: 12rem;
    padding-bottom: 16rem;
    background: rgba(89, 87, 87, 0.05);
  }
  .brand-list-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 4rem;
    /* flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 4rem; */
  }

  .brand-img img {
    height: 100%;
    width: 100%;
    object-fit: cover;

  }

  .brand-img img:hover {
    -ms-transform: scale(1.05);
    /* IE 9 */
    -webkit-transform: scale(1.05);
    /* Safari 3-8 */
    transform: scale(1.05);
    transition: all 1s;
  }

  .brand-info-wrapper .brand-title {
    color: #595757;
    text-align: center;
    font-family: Poppins;
    font-size: 2rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: 1.4px;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .brand-info-wrapper .brand-des {
    color: #595757;
    font-family: Noto Sans JP;
    font-size: 1.8rem;
    font-style: normal;
    font-weight: 300;
    line-height: calc(30 / 18);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: 9rem;
  }

  .brand-button {
    margin-top: 2.4rem;
    width: 100%;
    text-align: center;
  }

  .brand-button a {
    width: 100%;
    max-width: 34rem;
  }


  @media screen and (max-width: 800px) {
    .top-brand-list {
      padding-top: 8rem;
      padding-bottom: 10rem;
    }
    .brand-list-container {
      /* gap: 2.5rem; */
      grid-gap: 2rem;
    }
    .brand-info-wrapper .brand-title {
      font-size: 1.8rem;
      letter-spacing: 1.2px;
    }

    .brand-info-wrapper .brand-des {
      font-size: 1.6rem;
      line-height: calc(24 / 16);
    }

    .brand-button {
      margin-top: 2.4rem;
    }

    @media screen and (max-width: 650px) {
      .brand-list-container {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        grid-gap: 6.7rem;
        /* flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 6.7rem; */
      }
       .brand {
        padding: 0 2rem;
    }

      .brand-info-wrapper .brand-des {
        min-height: unset;
       }
    }

    @media screen and (max-width: 500px) {

      .brand {
        padding: 0;
      .brand-button a {
        width: 30rem;
        height: 5.6rem;
        font-size: 1.6rem;
      }
    }
  }
</style>
{% schema %}
  {
    "name": "Search by brand",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "background-1"
      }
    ],
    "blocks": [
      {
        "type": "Block",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "brand-image",
            "label": "Brand image"
          },
          {
            "type": "text",
            "id": "brand-name",
            "default": "Brand name",
            "label": "Brand name"
          },
          {
            "type": "textarea",
            "id": "brand-des",
            "default": "brand description",
            "label": "brand description"
          },
          {
            "type": "text",
            "id": "button-lable",
            "default": "Button lable",
            "label": "Button lable"
          },
          {
            "type": "url",
            "id": "brand-url",
            "label": "URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Search by brand",
        "blocks": [
          {
            "type": "Block"
          },
          {
            "type": "Block"
          },
          {
            "type": "Block"
          }
        ]
      }
    ]
  }
{% endschema %}