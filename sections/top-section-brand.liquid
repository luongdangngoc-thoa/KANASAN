        "default": "background-1"
      }
    ],
    "blocks": [
      {
        "type": "Block",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "brand-image",
            "label": "Brand image"
          },
          {
            "type": "text",
            "id": "brand-name",
            "default": "Brand name",
            "label": "Brand name"
          },
          {
            "type": "text",
            "id": "brand-des",
            "default": "brand description",
            "label": "brand description"
          },
          {
            "type": "text",
            "id": "button-lable",
            "default": "Button lable",
            "label": "Button lable"
          }, {
            "type": "url",
            "id": "brand-url",
            "label": "URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Search by brand",
        "blocks": [
          {
            "type": "Block"
          }, {
            "type": "Block"
          }, {
            "type": "Block"
          }
        ]
      }
    ]
  }
{% endschema %}